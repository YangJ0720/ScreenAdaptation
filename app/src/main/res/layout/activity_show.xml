<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ShowActivity">

    <TextView
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_80"
            android:text="90dp - 80dp"
            android:gravity="center"
            android:background="@color/colorAccent"/>

    <TextView
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_100"
            android:text="90dp - 100dp"
            android:layout_marginLeft="@dimen/dp_90"
            android:gravity="center"
            android:background="@color/colorPrimary"/>

    <TextView
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_120"
            android:text="90dp - 120dp"
            android:layout_marginLeft="@dimen/dp_180"
            android:gravity="center"
            android:background="@android:color/holo_blue_bright"/>

    <TextView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_270"
            android:text="50dp - 50dp"
            android:gravity="center"
            android:background="@android:color/darker_gray"/>

    <TextView
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_80"
            android:text="90dp - 40dp"
            android:gravity="center"
            android:background="@android:color/holo_orange_dark"/>

    <TextView
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_100"
            android:text="90dp - 20dp"
            android:layout_marginLeft="@dimen/dp_90"
            android:gravity="center"
            android:background="@android:color/holo_purple"/>

    <TextView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_70"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_270"
            android:text="50dp - 70dp"
            android:gravity="center"
            android:background="@android:color/holo_green_dark"/>

    <TextView
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_160"
            android:layout_marginTop="@dimen/dp_120"
            android:text="160dp - 160dp"
            android:gravity="center"
            android:background="@android:color/holo_red_light"/>

    <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_120"
            android:layout_marginLeft="@dimen/dp_160"
            android:src="@drawable/li"/>

    <ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_120"
            android:layout_marginLeft="@dimen/dp_240"
            android:src="@drawable/lj"/>

    <ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_200"
            android:layout_marginLeft="@dimen/dp_160"
            android:src="@drawable/lk"/>

    <ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_200"
            android:layout_marginLeft="@dimen/dp_240"
            android:src="@drawable/lm"/>

    <TextView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:text="50dp - 50dp"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_280"
            android:textColor="@android:color/white"
            android:background="@android:color/black"/>

    <TextView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:text="50dp - 50dp"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_280"
            android:layout_marginLeft="@dimen/dp_270"
            android:textColor="@android:color/white"
            android:background="@android:color/black"/>

    <TextView
            android:id="@+id/tv"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_330"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="marginLeft = 50dp - marginRight = 50dp"
            android:background="@android:color/black"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:text="match_parent - 40dp"
            android:layout_marginTop="@dimen/dp_380"
            android:background="@android:color/holo_blue_light"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_420"
            android:text="match_parent - 80dp"
            android:background="@android:color/holo_red_light"/>

</FrameLayout>